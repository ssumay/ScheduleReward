<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fragment_layout"
    android:layout_margin="10dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img"
            android:src="@drawable/singer2"
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/picture"
            android:padding="3px"
            android:layout_margin="20dp"
            />
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gohome"
            android:textSize="15dp"
            android:layout_toRightOf="@id/logout"
            android:background="@drawable/button"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/logout"
            android:textSize="14dp"
            android:layout_alignParentRight="true"
            android:layout_alignBaseline="@id/mysched"
            android:background="@drawable/button"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_margin="20dp"
            />

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="10dp"
        >

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="@string/sum_current"
            android:textSize="18sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/t1"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:layout_marginRight="20dp"
            />
        <LinearLayout
            android:id="@+id/per_s_lay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/t2"
            android:layout_width="100dp"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            />
        <TextView
            android:id="@+id/t3"
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/b3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/oneday"
            android:background="@drawable/oneday_ticket4"
            android:textColor="#808000"
            android:visibility="gone"
            android:textSize="18sp"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/b2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sum_used"
                android:visibility="gone"
                android:background="@drawable/button2"
                android:textSize="17sp"
                android:padding="10dp"
                android:gravity="center"
                android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/b1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sum_detail"
            android:visibility="gone"
            android:onClick="onB1Clicked"
            android:background="@drawable/button3"
            android:textSize="17sp"
            android:padding="10dp"
            android:gravity="center"
            android:layout_margin="10dp"/>
        </LinearLayout>
        <ListView
            android:id="@+id/list1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/picture3"
            android:visibility="gone"></ListView>

    <ListView
        android:id="@+id/list2"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:background="@drawable/picture2"
        android:layout_height="wrap_content"></ListView>
    </LinearLayout>
    </ScrollView>
</LinearLayout>