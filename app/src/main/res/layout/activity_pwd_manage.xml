<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".PwdManageActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pwd_manage"
        android:layout_gravity="center"        android:textSize="17sp"
        android:textStyle="bold"
        android:padding="10dp"/>
        <TextView android:layout_height="wrap_content"
            android:layout_width="wrap_content" android:onClick="onHome"
            android:paddingLeft="10dp" android:paddingBottom="4dp"
            android:paddingTop="4dp" android:paddingRight="10dp"
            android:layout_marginLeft="200dp"
            android:layout_gravity="center"
             android:background="@drawable/button"
            android:textSize="20dp" android:text="@string/gohome" />
    </LinearLayout>
    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>
